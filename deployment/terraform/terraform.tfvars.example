# Development Environment Configuration
# Copy this file to terraform.tfvars and customize for your environment

# Basic Configuration
aws_region  = "us-east-1"
environment = "development"

# Database Configuration
database_name     = "fraud_detection"
database_username = "fraud_admin"
# database_password = "your-secure-password-here"  # Set via environment variable or prompted

# Database Settings for Development
db_instance_class           = "db.t3.micro"  # Free tier eligible
db_allocated_storage        = 20
db_max_allocated_storage    = 100
db_backup_retention_period  = 7
enable_multi_az            = false
enable_performance_insights = false
enable_enhanced_monitoring  = false

# Redis Configuration
enable_redis       = true
redis_node_type    = "cache.t3.micro"  # Free tier eligible
redis_num_cache_nodes = 1

# Networking
enable_nat_gateway = false  # Save costs in development

# Application Configuration
api_instance_type       = "t3.micro"  # Free tier eligible
dashboard_instance_type = "t3.micro"  # Free tier eligible
min_capacity           = 1
max_capacity           = 2
desired_capacity       = 1

# Monitoring
log_retention_days        = 7
enable_detailed_monitoring = false

# Security
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict in production
enable_waf         = false

# Cost Optimization
enable_spot_instances = false
spot_price           = "0.05"

# Additional Tags
additional_tags = {
  Owner       = "development-team"
  Purpose     = "fraud-detection-development"
  CostCenter  = "engineering"
}

# Notifications
notification_email = "dev-team@company.com"

# Features (disabled for cost savings in development)
enable_lambda_functions = false
enable_data_pipeline   = false
enable_cloudtrail      = true
enable_config          = false
enable_guardduty       = false
